<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.demexam.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_testFragment"
            app:destination="@id/testFragment" />
    </fragment>
    <fragment
        android:id="@+id/listenFragment"
        android:name="com.example.demexam.ListenFragment"
        android:label="fragment_listen"
        tools:layout="@layout/fragment_listen" >
        <action
            android:id="@+id/action_listenFragment_to_testFragment"
            app:destination="@id/testFragment" />
        <action
            android:id="@+id/action_listenFragment_to_testFragment2"
            app:destination="@id/testFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.demexam.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/testFragment"
        android:name="com.example.demexam.TestFragment"
        android:label="fragment_test"
        tools:layout="@layout/fragment_test" />
</navigation>